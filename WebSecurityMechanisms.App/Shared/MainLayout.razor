@inherits LayoutComponentBase

<MudThemeProvider Theme="@_customTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((_) => DrawerToggle())"/>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            <MudText Typo="Typo.h5" Class="mt-1" Align="Align.Center">Web Security Mechanisms</MudText>
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Color="Color.Default">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-4" MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    readonly MudTheme _customTheme = new MudTheme()
    {
        Palette = new PaletteLight()
        {
            Primary = Colors.Blue.Darken4,
            Secondary = Colors.Blue.Darken2,
            AppbarBackground = Colors.Blue.Darken4,
            Info = Colors.Blue.Darken4,
            Error = Colors.Red.Darken4,
            Success = Colors.Green.Darken4
        },
    };

}